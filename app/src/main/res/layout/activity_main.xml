<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="videos" type="com.app.shortoftheweek.models.VideoModel"/>
    </data>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.app.shortoftheweek.MainActivity">
        <Button
            android:id="@+id/fetch_videos"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Fetch Videos"/>

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/fetch_videos"/>

        <TextView
            android:text="@{videos.title}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/request_output_tv"
            android:layout_alignBottom="@+id/thumbnail"
            android:layout_toRightOf="@+id/thumbnail"
            android:layout_toEndOf="@+id/thumbnail"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:text="@{videos.language}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/languageOutput"
            android:layout_below="@+id/request_output_tv"
            android:layout_marginTop="21dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</layout>